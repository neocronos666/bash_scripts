# FunciÃ³n para ejecutar un script
ejecutar_script() {
    local script="${SCRIPTS[$1]}"
    if [[ -x "$script" ]]; then
        echo "â–¶  Ejecutando: $(basename "$script")..."
        bash "$script"
    else
        echo "âš  El script no tiene permisos de ejecuciÃ³n.\n"
        chmod +x "$script"
        echo "\nâœ” Permisos otorgados con exito"
        bash "$script"
    fi
    read -p "â³ (continuar)"
}

# FunciÃ³n para explorar un directorio
explorar_directorio() {
    local dir="${DIRS[$1]}"
    cd "$dir" || return
    BASE_DIR="$dir"
}



# Loop del menÃº
while true; do
    mostrar_menu
    #read -p "â­• Selecciona una opciÃ³n: " opcion
    #sudo echo -e "${YELLOW} ðŸ”¹ Shell:${NC} $PS1"
    #read -p "â­• $PS1 " opcion
    #PS1V=$(echo $PS1)
    #echo "$(env | grep '^PS1=' | sed 's/^PS1=//')"
    #PS1V=$(env | grep '^PS1=' | sed 's/^PS1=//')
    read -p "   ðŸ—¿$USERâ­• " opcion


    # Salir
    if [[ "$opcion" == "0" ]]; then
        clear
        echo -e "   âš¬"
        sleep 0.1
        clear
        echo -e "   âš­ ${GREEN} Que"
        sleep 0.1
        clear
        echo -e "   âš® ${CYAN} Que tenga"
        sleep 0.1
        clear
        echo -e "   âš¯ ${NC} Que tenga un buen "
        sleep 0.1
        clear
        echo -e "   âœ³ï¸ ${YELLOW} Que tenga un buen dia!!!"        
        exit 0
    fi
#----------
  # Ejecutar un script
if [[ "$opcion" =~ ^[0-9]+$ ]] && (( opcion >= 1 && opcion <= ${#SCRIPTS[@]} )); then
    ejecutar_script $((opcion-1))
    
# Explorar un directorio
elif [[ "$opcion" =~ ^d[0-9]+$ ]]; then
    num=${opcion:1} # Extrae el nÃºmero despuÃ©s de "d"
    if (( num >= 1 && num <= ${#DIRS[@]} )); then
        explorar_directorio $((num-1))
    fi

# Subir un nivel en el directorio
elif [[ "$opcion" == "*" ]]; then
    cd "$BASE_DIR/.." || return
    BASE_DIR=$(pwd) # Actualiza BASE_DIR al nivel superior
# Manejar entradas no vÃ¡lidas o desconocidas
else
    # echo -e "${RED}âš  Error: OpciÃ³n no vÃ¡lida: '$opcion'${NC}"
