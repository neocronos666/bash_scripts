    for i in "${!SCRIPTS[@]}"; do
        echo -e "         ${YELLOW}[$((i+1))]${RED} $(basename "${SCRIPTS[i]}")"
    done

    # Listar subdirectorios
    echo ""
    echo -e "    ${NC}ðŸ“ Directorios disponibles:"
    DIRS=($(find "$BASE_DIR" -maxdepth 1 -type d ! -path "$BASE_DIR" -not -name ".*"| sort))
