    echo -e "${CYAN}       â•‘ ${GREEN}â›¶ Directorio:${NC}$BASE_DIR"
    echo -e "${CYAN}       â•™â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¾"                        
    
    # Listar scripts en el directorio principal
    echo -e "    ${NC}ðŸ“ Scripts disponibles:"
