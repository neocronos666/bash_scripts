CYAN="\e[36m"
YELLOW="\e[33m"
NC="\e[0m"
# Directorio base donde estÃ¡n los scripts
BASE_DIR="/home/neocronos/Documentos/bash_scripts"

# FunciÃ³n para mostrar el menÃº
mostrar_menu() {
    clear
    echo " ðŸ”°             "
    echo -e "${CYAN}    â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®"
